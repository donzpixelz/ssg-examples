---
import SeoHead from '../components/SeoHead.astro';
const title = Astro.props.title ?? 'Astro Example';
const description = Astro.props.description ?? 'Static, fast, content-first.';
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <SeoHead {title} {description} />
    <link rel="stylesheet" href={import.meta.env.BASE_URL + 'css/main.css'} />
</head>
<body>
<header>
    <a class="site-title" href={import.meta.env.BASE_URL}>Astro Example</a>
    <nav class="site-nav" aria-label="Main">
        <a href={import.meta.env.BASE_URL}>Home</a>
        <a href={import.meta.env.BASE_URL + 'posts/'}>Blog</a>
        <a href={import.meta.env.BASE_URL + 'about/'}>About</a>
        <a href={import.meta.env.BASE_URL + 'contact/'}>Contact</a>
        <a href={import.meta.env.BASE_URL + 'tags/'}>Tags</a>
    </nav>
</header>

<main id="content">
    <slot />
</main>

<footer>
    <p>© {new Date().getFullYear()} Astro Example · <a href={import.meta.env.BASE_URL + 'rss.xml'}>RSS</a> · <a href={import.meta.env.BASE_URL + 'sitemap.xml'}>Sitemap</a></p>
</footer>
</body>
</html>
