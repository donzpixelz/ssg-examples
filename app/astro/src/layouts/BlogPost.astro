---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout title={frontmatter.title ?? 'Post'} description={frontmatter.description}>
    <article class="post">
        <h1>{frontmatter.title}</h1>
        {frontmatter.date && (
                <p class="post-meta">
                    <time datetime={frontmatter.date.toString()}>
                        {new Date(frontmatter.date).toLocaleDateString(undefined, { month:'short', day:'numeric', year:'numeric' })}
                    </time>
                </p>
        )}
        <slot />
    </article>
</BaseLayout>
