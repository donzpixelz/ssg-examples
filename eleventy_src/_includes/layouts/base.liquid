<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{% if title %}{{ title }} Â· Eleventy{% else %}Eleventy{% endif %}</title>
  <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
</head>
<body>
  <header class="header-outer">
    <h1 style="margin:.25rem 0">
      {% if title %}{{ title }}{% else %}<span class="font-eleventy">Eleventy</span>{% endif %}
    </h1>
    <nav aria-label="Primary">
      <a href="{{ '/' | url }}" {% if page.url == '/' %}aria-current="page"{% endif %}>Home</a>
      <a href="{{ '/eleventy/' | url }}" class="eleventy-link" {% if page.url contains '/eleventy/' %}aria-current="page"{% endif %}>Eleventy</a>
      <a href="{{ '/about/' | url }}" {% if page.url contains '/about/' %}aria-current="page"{% endif %}>About</a>
      <a href="{{ '/contact/' | url }}" {% if page.url contains '/contact/' %}aria-current="page"{% endif %}>Contact</a>
    </nav>
  </header>

  <main class="container">
    {{ content }}
  </main>

  <footer class="footer-outer">
    <strong>Loaded at:</strong> <time id="page-loaded-at"></time>
  </footer>

  <script src="{{ '/js/loaded-at.js' | url }}" defer></script>
</body>
</html>
